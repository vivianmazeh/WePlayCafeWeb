{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "easy-to-learn-web": {
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/easy-to-learn-web",
            "index": "src/index.html",       
            "main": "src/main.ts",
            "polyfills": [
              "zone.js"
            ],
           "budgets": [
              {
                "type": "initial",
                "maximumWarning": "5mb",
                "maximumError": "8mb"
              },
              {
                "type": "anyComponentStyle",
                "maximumWarning": "5kb",
                "maximumError": "6kb"
              }
              ],
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.css"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
              {
                "type": "initial",
                "maximumWarning": "5mb",
                "maximumError": "8mb"
              },
              {
                "type": "anyComponentStyle",
                "maximumWarning": "15kb",
                "maximumError": "20kb"
              }
              ],
              "outputHashing": "all",
              "fileReplacements": [
                {
                  "replace": "src/app/environments/env.ts",
                  "with": "src/app/environments/env.prod.ts"
                }
              ]
            },
            "test": {
              "budgets": [
              {
                "type": "initial",
                "maximumWarning": "2mb",
                "maximumError": "5mb"
              },
              {
                "type": "anyComponentStyle",
                "maximumWarning": "15kb",
                "maximumError": "20kb"
              }
              ],
              "outputHashing": "all",
              "fileReplacements": [
                {
                  "replace": "src/app/environments/env.ts",
                  "with": "src/app/environments/env.test.ts"
                }
              ]
            },
            "local": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true

            }
          }
       
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "buildTarget": "easy-to-learn-web:build"
          },
          "configurations": {
            "production": {
              "buildTarget": "easy-to-learn-web:build:production"
            },
            "test": {
              "buildTarget": "easy-to-learn-web:build:test"
            },
            "local": {
              "buildTarget": "easy-to-learn-web:build:local"
            }
      
          }
          
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "easy-to-learn-web:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "tsconfig.spec.json",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.css"
            ],
            "scripts": [
              "node_modules/jquery/dist/jquery.min.js"
            ]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
